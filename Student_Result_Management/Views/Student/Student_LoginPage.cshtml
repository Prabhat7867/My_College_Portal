@{
    ViewData["Title"] = "Home Page";
}



<div class="box">
    <form>
        <h3>@TempData["Get_details"]</h3>

        @if (ViewData["Login_Status"] != null)
        {
            <h3>@ViewData["Login_Status"]</h3>
        }
        <label for="Roll_No">Enter Roll Number</label>
        <input type="number" id="Roll_No" name="Roll_No" /><br>

        <label for="Name">Enter Password</label>
        <input type="text" id="Password" name="Password" /><br>

        <input type="submit" value="Submit" asp-action="Student_LoginPage" formmethod="post" />
    </form>
</div>
<style>
    body {
        background: linear-gradient(to right, #6a11cb, #2575fc);
        font-family: 'Arial', sans-serif;
        color: #555;
    }
    .box {
        width: 400px;
        padding: 20px;
        margin: 40px auto;
        border: 2px solid #007bff;
        border-radius: 10px;
        text-align: center;
        background-color: #ffffff;
        /* background-color: #e3f2fd; /* Light blue background */ */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Subtle shadow */
    }

    form label {
        font-weight: bold;
        display: block;
        margin-bottom: 10px;
        color: #333;
    }

    input[type="text"],
    input[type="number"] {
        width: calc(100% - 16px); /* Adjust to the full width minus padding */
        padding: 10px;
        margin: 5px 0 20px 0;
        box-sizing: border-box;
        border: 1px solid #ccc;
        border-radius: 4px;
        transition: border-color 0.3s;
    }

        input[type="text"]:focus,
        input[type="number"]:focus {
            border-color: #007bff;
            outline: none;
        }

    input[type="submit"] {
        background-color: #007bff;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.3s, transform 0.3s;
    }

    /* input[type="submit"] {
        background-color: #007bff;
        padding: 10px 30px;
        font-size: 18px;
        border-radius: 25px;
        transition: background-color 0.3s, transform 0.3s;
    } */

        input[type="submit"]:hover {
            background-color: #0056b3;
            transform: scale(1.05);
        }
</style>


