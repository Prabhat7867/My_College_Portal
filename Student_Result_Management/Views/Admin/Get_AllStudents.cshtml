@model IEnumerable<Student_Result_Management.Models.StudentDetails>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="card shadow-lg border-0">
        <div class="card-body p-5">
            <h4 class="card-title text-center mb-4 text-primary">Student's details</h4>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.RollNo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FathersName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.MothersName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Standard)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PassedYear)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.RollNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FathersName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MothersName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Standard)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PassedYear)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.RollNo }) |
                                @Html.ActionLink("Details", "Details", new { id = item.RollNo }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.RollNo })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="text-center mt-4">
                <a class="btn btn-primary btn-lg" asp-controller="Admin" asp-action="Index">Back</a>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background: linear-gradient(to right, #6a11cb, #2575fc);
        font-family: 'Arial', sans-serif;
        color: #555;
    }

    .card {
        margin-top: 20px;
        border-radius: 15px;
        background-color: #ffffff;
    }

    .card-title {
        font-family: 'Georgia', serif;
        font-size: 24px;
    }

    h1 {
        color: #ffffff;
    }

    dt {
        font-size: 18px;
    }

    dd {
        font-size: 18px;
    }

    a.btn {
        padding: 10px 30px;
        font-size: 18px;
        border-radius: 25px;
        transition: background-color 0.3s, transform 0.3s;
    }

        a.btn:hover {
            background-color: #0056b3;
            transform: scale(1.05);
        }
</style>
