@model Student_Result_Management.Models.Y2024

@{
    ViewData["Title"] = "Result";
}



<div class="container">
    <div class="card shadow-lg border-0">
        <div class="card-body p-5">
            <h4 class="card-title text-center mb-4 text-primary">@ViewData["Title"]</h4>
            <hr />
                <dl class="row">
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.RollNo)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.RollNo)
                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.Name)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.Name)
                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.PassedYear)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.PassedYear)
                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.Hindi)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.Hindi)
                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.English)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.English)
                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.Physics)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.Physics)
                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.Chemistry)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.Chemistry)
                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.Maths)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.Maths)
                    </dd>
                </dl>

                <div class="text-center mt-4">
                <a class="btn btn-primary btn-lg" asp-controller="Admin" asp-action="GetALL_StudentResult">Back</a>
                @Html.ActionLink("Edit", "Update_Result", "Admin", new { id = Model.RollNo }) 
                </div>

