    }
    container{
        width:400px;
    }

    .card {
        margin-top: 20px;
        border-radius: 15px;
        background-color: #ffffff;
    }

    .card-title {
        font-family: 'Georgia', serif;
        font-size: 24px;
    }

    h1 {
        color: #ffffff;
    }

    dt {
        font-size: 18px;
    }

    dd {
        font-size: 18px;
    }

    a.btn {
        padding: 10px 30px;
        font-size: 18px;
        border-radius: 25px;
        transition: background-color 0.3s, transform 0.3s;
    }

        a.btn:hover {
            background-color: #0056b3;
            transform: scale(1.05);
        }
</style>

