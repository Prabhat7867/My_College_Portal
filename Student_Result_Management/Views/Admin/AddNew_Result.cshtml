@model Student_Result_Management.Models.Y2024

@{
    ViewData["Title"] = "AddNew_Result";
}

<div class="container">
    <div class="card shadow-lg border-0">
        <div class="card-body p-5">
            <h4 class="card-title text-center mb-4 text-primary">@ViewData["Title"]</h4>
            <hr />
            <div class="row">
                <div class="col-md-8 offset-md-2">
                        <form asp-action="AddNew_Result">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="RollNo" class="control-label"></label>
                                <input asp-for="RollNo" class="form-control" />
                                <span asp-validation-for="RollNo" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Name" class="control-label"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="PassedYear" class="control-label"></label>
                                <input asp-for="PassedYear" class="form-control" />
                                <span asp-validation-for="PassedYear" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Hindi" class="control-label"></label>
                                <input asp-for="Hindi" class="form-control" />
                                <span asp-validation-for="Hindi" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="English" class="control-label"></label>
                                <input asp-for="English" class="form-control" />
                                <span asp-validation-for="English" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Physics" class="control-label"></label>
                                <input asp-for="Physics" class="form-control" />
                                <span asp-validation-for="Physics" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Chemistry" class="control-label"></label>
                                <input asp-for="Chemistry" class="form-control" />
                                <span asp-validation-for="Chemistry" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Maths" class="control-label"></label>
                                <input asp-for="Maths" class="form-control" />
                                <span asp-validation-for="Maths" class="text-danger"></span>
                            </div>
                        <div class="text-center mt-4">
                                <input type="submit" value="Create" class="btn btn-primary" />
                                <a asp-action="Index">Back to List</a>
                            </div>
                        </form>
                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


<style>
    body {
        background: linear-gradient(to right, #6a11cb, #2575fc);
        font-family: 'Arial', sans-serif;
        color: #555;
    }

    .box {
        width: 400px;
        padding: 20px;
        margin: 40px auto;
        border: 2px solid #007bff;
        border-radius: 10px;
        text-align: center;
        background-color: #ffffff;
        /* background-color: #e3f2fd; /* Light blue background */ */ box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Subtle shadow */
    }

    .card {
        margin-top: 20px;
        border-radius: 15px;
        background-color: #ffffff;
    }

    .card-title {
        font-family: 'Georgia', serif;
        font-size: 24px;
    }

    h1 {
        color: #ffffff;
    }

    dt {
        font-size: 18px;
    }

    dd {
        font-size: 18px;
    }

    form label {
        font-weight: bold;
        display: block;
        margin-bottom: 10px;
        color: #333;
    }

    input[type="text"],
    input[type="number"] {
        width: calc(100% - 16px); /* Adjust to the full width minus padding */
        padding: 10px;
        margin: 5px 0 20px 0;
        box-sizing: border-box;
        border: 1px solid #ccc;
        border-radius: 4px;
        transition: border-color 0.3s;
    }

        input[type="text"]:focus,
        input[type="number"]:focus {
            border-color: #007bff;
            outline: none;
        }

    input[type="submit"] {
        padding: 10px 30px;
        font-size: 18px;
        border-radius: 25px;
        transition: background-color 0.3s, transform 0.3s;
    }


        input[type="submit"]:hover {
            background-color: #0056b3;
            transform: scale(1.05);
        }
</style>
